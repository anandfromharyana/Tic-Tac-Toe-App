     <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        tools:context=".promode.promode">

        <LinearLayout
            android:id="@+id/promode_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pro Mode Tic Tac Toe"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />



            <!-- Game Status -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player X's Turn (0/3 pieces)"
                android:textSize="18sp"
                android:textColor="#34495e"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:background="#ecf0f1"
                android:padding="12dp"
                android:gravity="center" />

            <!-- Game Board Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#34495e"
                android:padding="6dp"
                android:layout_marginBottom="24dp"
                android:elevation="8dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn00"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="0,0"
                        android:elevation="2dp" />

                    <Button
                        android:id="@+id/btn01"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="0,1"
                        android:elevation="2dp" />

                    <Button
                        android:id="@+id/btn02"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="0,2"
                        android:elevation="2dp" />

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn10"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="1,0"
                        android:elevation="2dp" />

                    <Button
                        android:id="@+id/btn11"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="1,1"
                        android:elevation="2dp" />

                    <Button
                        android:id="@+id/btn12"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="1,2"
                        android:elevation="2dp" />

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn20"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="2,0"
                        android:elevation="2dp" />

                    <Button
                        android:id="@+id/btn21"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="2,1"
                        android:elevation="2dp" />

                    <Button
                        android:id="@+id/btn22"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:background="#ecf0f1"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50"
                        android:tag="2,2"
                        android:elevation="2dp" />

                </LinearLayout>

            </LinearLayout>



            <!-- Score Board -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:background="#fff"
                android:padding="16dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player X"
                        android:textSize="16sp"
                        android:textColor="#2c3e50"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scoreX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="#e74c3c"
                        android:textStyle="bold"
                        android:background="#ffebee"
                        android:padding="8dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#bdc3c7" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player O"
                        android:textSize="16sp"
                        android:textColor="#2c3e50"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scoreO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="#3498db"
                        android:textStyle="bold"
                        android:background="#e3f2fd"
                        android:padding="8dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🔄 Reset Game"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:background="#95a5a6"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/newGameButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🆕 New Game"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:background="#27ae60"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp" />

            </LinearLayout>

            <!-- Pro Mode Badge -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ PRO MODE ⚡"
                android:textSize="12sp"
                android:textColor="#9b59b6"
                android:textStyle="bold"
                android:background="#f3e5f5"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>